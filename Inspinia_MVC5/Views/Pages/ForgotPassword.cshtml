@{
    Layout = "~/Views/Shared/_Layout_Pages.cshtml";
}
<body class="gray-bg">
    <div class="passwordBox animated fadeInDown">
        <div class="row">
            <div class="col-md-12">
                <div class="ibox-content">
                    <h2 class="font-bold">Forgot password</h2>
                    <p>Enter your email address and your password will be reset and emailed to you.</p>
                    <div class="row">
                        <div class="col-lg-12">
                            <form class="m-t" id="forgotpassword-form" role="form" action="/pages/ForgotPassword" method="post">
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email address" name="email" id="email" required="">
                                </div>
                                <button type="submit" class="btn btn-primary block full-width m-b">Send link for new password</button>
                            </form>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                EMT Certification Registry
            </div>
            <div class="col-md-6 text-right">
                <small>©2016</small>
            </div>
        </div>
    </div>
</body>

@section Scripts{

    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
    <script src="http://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
  <script src="~/Scripts/site-scripts/pages-login.js"></script>
}





